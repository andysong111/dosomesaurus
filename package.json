{
  "name": "b2b-wholesale-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "functions"
  ],
  "scripts": {
    "dev:web": "npm --workspace apps/web run dev",
    "dev:admin-cli": "npm --workspace apps/admin-cli run dev",
    "dev:functions": "npm --workspace functions run dev",
    "dev:emulators": "firebase emulators:start --project $FIREBASE_PROJECT_ID",
    "lint": "npm run lint -ws",
    "format": "prettier -w ."
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  }
}
